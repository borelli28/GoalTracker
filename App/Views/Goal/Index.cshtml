@model List<(App.Models.Goal Goal, List<App.Models.Progress> Progresses)>

@{
    ViewData["Title"] = "Goals";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">Goals</h1>
    <div>
        @if (Model == null || !Model.Any())
        {
            <h6>No goals found</h6>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Creation Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (goal, progresses) in Model)
                    {
                        <tr>
                            <td>@goal.Name</td>
                            <td>@goal.Description</td>
                            <td>@goal.CreatedAt</td>
                            <td>
                                <a asp-action="Update" asp-controller="Goal" asp-route-id="@goal.Id">Edit</a> |
                                <a asp-action="Delete" asp-controller="Goal" asp-route-id="@goal.Id">Delete</a> |
                                <a asp-action="Update" asp-controller="Progress" asp-route-id="@(progresses.LastOrDefault()?.Id)">Update Progress</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <div>
                @foreach (var (goal, progresses) in Model)
                {
                    <h6>@goal.Name</h6>
                    <div id="cal-heatmap-@goal.Id"></div>
                }
            </div>
        }
        <a asp-action="Create" asp-controller="Goal" class="btn btn-primary">Create New Goal</a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @foreach (var (goal, progresses) in Model)
            {
                <text>
                (function() {
                    var data = [
                        @foreach (var progress in progresses)
                        {
                            <text>{date: "@progress.Date.ToString("yyyy-MM-dd")", value: @(progress.Completed ? 1 : 0)},</text>
                        }
                    ];

                    var cal = new CalHeatmap();
                    cal.paint({
                        itemSelector: "#cal-heatmap-@goal.Id",
                        data: {
                            source: data,
                            x: 'date',
                            y: 'value'
                        },
                        date: {
                            start: new Date(new Date().setFullYear(new Date().getFullYear() - 1))
                        },
                        range: 12,
                        scale: {
                            color: {
                                type: 'threshold',
                                range: ['#EBEDF0', '#9BE9A8', '#40C463', '#30A14E', '#216E39']
                            }
                        },
                        domain: {
                            type: 'month'
                        },
                        subDomain: {
                            type: 'day',
                            radius: 2
                        }
                    });
                })();
                </text>
            }
        });
    </script>
}
