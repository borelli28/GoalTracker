@model List<(App.Models.Goal Goal, List<App.Models.Progress> Progresses)>

@{
    ViewData["Title"] = "Goals";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">Goals</h1>
    <div>
        @if (Model == null || !Model.Any())
        {
            <h6>No goals found</h6>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Creation Date</th>
                        <th>Progress</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (goal, progresses) in Model)
                    {
                        <tr>
                            <td>@goal.Name</td>
                            <td>@goal.Description</td>
                            <td>@goal.CreatedAt</td>
                            <td>
                                <div id="cal-heatmap-@goal.Id"></div>
                            </td>
                            <td>
                                <a asp-action="Update" asp-controller="Goal" asp-route-id="@goal.Id">Edit</a> |
                                <a asp-action="Delete" asp-controller="Goal" asp-route-id="@goal.Id">Delete</a> |
                                <a asp-action="Update" asp-controller="Progress" asp-route-id="@(progresses.LastOrDefault()?.Id)">Update Progress</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <a asp-action="Create" asp-controller="Goal" class="btn btn-primary">Create New Goal</a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @foreach (var (goal, progresses) in Model)
            {
                @:var data_@(goal.Id.Replace("-", "_")) = [
                    @foreach (var progress in progresses)
                    {
                        @:{date: "@progress.Date.ToString("yyyy-MM-dd")", value: @(progress.Completed ? 1 : 0)},
                    }
                @:];

                @:var cal_@(goal.Id.Replace("-", "_")) = new CalHeatmap();
                @:cal_@(goal.Id.Replace("-", "_")).paint({
                @:    data: { source: data_@(goal.Id.Replace("-", "_")) },
                @:    date: { start: new Date(Date.now() - 365 * 24 * 60 * 60 * 1000) },
                @:    range: 12,
                @:    scale: { color: { type: 'threshold', range: ['#EBEDF0', '#9BE9A8', '#40C463', '#30A14E', '#216E39'] } },
                @:    domain: { type: 'month' },
                @:    subDomain: { type: 'day', radius: 2 }
                @:}, [[0, 0, 0, 'cal-heatmap-@goal.Id']]);
            }
        });
    </script>
}
